        app:srcCompat="@drawable/sunny" />

    <TextView
        android:id="@+id/txtVwCiudad_layoutclima"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgVwClima_layoutclima"
        android:text="Ciudad"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtVwTemperatura_layoutclima"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwCiudad_layoutclima"
        android:layout_toEndOf="@+id/imgVwClima_layoutclima"
        android:text="Temperatura"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtVwDescipcion_layoutclima"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVwTemperatura_layoutclima"
